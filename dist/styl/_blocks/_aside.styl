@import '../_helpers/_vars.styl'
.aside
	font-size 1em
	color #717171
	text-align left
	&__block
		margin-bottom 55px
		&:last-child
			margin-bottom 0
	&__title
		padding 12px 25px
		background-color $light-bg
		color #2f2f2f
		position relative
		&:after
			content '+'
			position absolute
			right 25px
			top 50%
			transform translateY(-50%)
			font-size 2em
			display none
		
	&__list
		padding-left 25px
		&--item
			display block
			margin-bottom 30px
			&:first-child
				margin-top 30px
			&:last-child
				margin-bottom 0
		&--link
			color inherit
			&.active
				text-decoration underline
			&:hover
				text-decoration underline