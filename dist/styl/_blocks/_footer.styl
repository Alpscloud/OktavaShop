@import '../_helpers/_vars.styl'

.footer
	&__info
		background-color $light-sect-bg
		font 1.14em $Bold
		color #717171
	&__copy
		background-color $footer-bg
		padding 7px 0
		.copy
			color $light-color 
			&:hover
				text-decoration underline
	&__title
		text-transform uppercase
		margin-bottom 20px
	&__list
		text-align left
		&--item
			display block
			margin-bottom 20px
			&:last-child
				margin-bottom 0
		&--link
			color inherit
			font-family $Reg
			&:hover
				text-decoration underline
			&--messangers
				position relative
				&:after,
				&:before
					content ''
					display inline-block
					width 28px
					height 28px
					position absolute
					top 50%
					transform translateY(-50%)
				&:after
					right -65px
					background url('../img/icons/svg/whatsapp-ic.svg') center no-repeat
				&:before
					right -35px
					background url('../img/icons/svg/viber-ic.svg') center no-repeat
				
	.social__list
		margin-top 20px
.address
	font-family $Reg
	margin-bottom 20px
	line-height 1.8
	