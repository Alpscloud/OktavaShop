@import '../_helpers/_vars.styl'


.header
	&__top
		width 100%
		background $light-sect-bg
		padding 8px 0
	&__info
		padding 30px 0
		background $light-color
		
	&__action
		display flex
		align-items center
		justify-content space-between
		flex-wrap wrap
		margin-bottom 30px
		&--link
			color $dark-color
			font-size 1.1em
			
			.counter
				display inline-block
				margin-left 5px
			&:hover
				opacity .6
			&--comparison
				padding-left 35px
				background url('../img/icons/svg/scale-ic.svg') left center no-repeat
				background-size 32px 32px
			&--like
				padding-left 35px
				background url('../img/icons/svg/heart-ic.svg') left center no-repeat
				background-size 32px 32px
			&--basket
				height 38px
				padding-left 40px
				background url('../img/icons/svg/basket-ic.svg') left center no-repeat
				background-size 38px 38px
				.counter
					margin-top 5px
.menu__list
	text-align right
	&--item
		display inline-block
		vertical-align middle
		position relative
		padding 2px 15px
		border-right 2px solid #9e9e9e
		&:last-child
			border-right none
	&--link
		display block
		font-size 1.285em 
		color #393939
		&:hover
			text-decoration underline

			
.logo
	display block
	margin-bottom 10px
	&__img
		display block
		max-width 270px
	&__descr
		font 1.21em $Bold
		color $accent-color
	&:hover
		opacity .8
		

		

	
		