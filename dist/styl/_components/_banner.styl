@import '../_helpers/_vars.styl'

.sect__banner
	height 300px
	.swiper-container
		height 100%
		.swiper-wrapper
			height 100%
		.swiper-slide
			background-size cover
			background-position center
			text-align left
			.container
				height 100%
				position relative
			.slide__row
				top 50%
				transform translateY(-50%)
				left 15px
				position absolute
				max-width 470px
		
		.slide__title
			text-transform uppercase
			color #595959
			font 1.71em $Bold
			line-height 1.4

