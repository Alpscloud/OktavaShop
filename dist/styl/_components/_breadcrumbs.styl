@import '../_helpers/_vars.styl'

.breadcrumbs
	&__list
		padding 20px 0
		margin-bottom 20px
		border-bottom 1px solid $light-sect-bg
		&--item
			position relative
			display inline-block
			margin-right 30px
			&:after
				content ''
				position absolute
				top 50%
				transform translateY(-50%)
				right -20px
				display inline-block
				width 10px
				height 8px
				background url('../img/icons/svg/right-arrow-ic.svg') center no-repeat
			&:last-child
				margin-right 0
				&:after
					display none
		&--link
			color #a7a7a7
			text-decoration underline
			&:hover
				color #2f2f2f
				text-decoration none
			&.active
				color #2f2f2f
				text-decoration none