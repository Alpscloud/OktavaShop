@import '../_helpers/_vars.styl'

.comments
	&__title
		text-align center
		text-transform uppercase
		border-bottom 1px solid $light-sect-bg
		padding-bottom 5px
		margin-bottom 22px
		color $dark-color
		font 1.285em $Bold
	&__item
		padding-bottom 20px
		border-bottom 1px solid $light-sect-bg
		margin-bottom 20px
		&--author
			margin-bottom 15px
			font-size 1.285em
		&--text
			p
				margin-bottom 10px
				line-height 1.8
				&:last-child
					margin-bottom 20px
