@import '../_helpers/_vars.styl'

.filter
	display flex
	align-items center
	justify-content space-between
	flex-wrap wrap
	margin-bottom 20px
	padding 13px 20px
	background-color $light-bg
	&__item
		display inline-block
		margin-right 20px
		&:last-child
			margin-right 0
		&--title
			color #2f2f2f
			font-size .9em
			display inline-block
			vertical-align middle
		&--link
			position relative
			padding-left 25px
			svg
				transition all .23s ease-in-out
				display inline-block
				position absolute
				top 50%
				transform translateY(-50%)
				width 20px
				height 20px
				left 0
			&--buy
				color $accent-color
				svg
					fill $accent-color
				
			&--delete
				color #9a9a9a
				svg
					fill #9a9a9a
			&:hover
				color $primary-color
				svg
					fill $primary-color
				
				
	&__select
		display inline-block
		vertical-align middle
		border 1px solid transparent
		background-color transparent
		transition all .23s ease-in-out
		position relative
		font-size .9em
		color #717171
		&:focus,
		&:hover
			border-color $accent-color
		&:focus,
		&:active
			outline none
	
	&__counter
		color #717171
		ont-size .9em
		display inline-block
		vertical-align middle
		

.aside
	&__filter
		padding 30px 17px
		background-color $light-bg
		text-align left
		&--item
			position relative
		&--block
			margin-bottom 25px
			&:last-child
				margin-bottom 0
		&--title
			position absolute
			top 0
			left 0
			width 100%
			display block
			pointer-events none
			background-color $light-bg
			padding-bottom 3px
			border-bottom 1px solid $light-sect-bg
			cursor pointer
			&:after
				content ''
				right 0
				top 50%
				position absolute
				pointer-events none
				cursor pointer
				transform translateY(-50%)
				display inline-block
				width 8px
				height 6px
				background url('../img/icons/select-arrow.png') center no-repeat
		&--select
			font-size .9em
			display block
			width 100%
			border-top none
			border-left none
			border-right none
			height 26px
			display block
			width 100%
			
	
			background transparent
			outline none
			box-shadow none
			&::-webkit-outer-spin-button
			&::-webkit-inner-spin-button 
				appearance none
				margin 0
				
		&--text
			margin-top 12px
			color #c6c4c5
			&.active
				color $dark-color
		