@import '../_helpers/_vars.styl'

.form
	&__search
		&--wrapp
			position relative
		&--input
			display inline-block
			width 100%
			padding 5px 20px
			height 40px
			text-align left
			background #f2f2f2
			border 1px solid $light-sect-bg	
			&:hover,
			&:focus
				border-color $accent-color
				
		&--btn
			display inline-block
			width 22px
			height 22px
			position absolute
			z-index 2
			top 50%
			transform translateY(-50%)
			right 10px
			background url('../img/icons/svg/search-ic.svg') center no-repeat
			background-size cover
	&__subscr
		&--input
			color #717171
			font-size 1.14em
			padding-left 30px
			padding-right 185px
		&--wrapp
			margin-top 18px
		&--btn
			color #717171
			font 1.14em $Bold
			position absolute
			top 50%
			transform translateY(-50%)
			right 0
			padding 4px 15px
			border-left 2px solid #818181
			text-align center
			text-transform uppercase
			
			&:hover
				color $accent-color
				border-color $accent-color
			
	&__feedback
		
		&--input
			border 1px solid $light-sect-bg
			background-color $light-bg
			text-align left
			color #717171
			font-size 1.14em
			margin-bottom 10px
			display block
			width 100%
			padding 10px 20px
			&:hover,
			&:focus
				border-color $accent-color
		textarea
			resize vertical
			min-height 130px
			margin-bottom 35px
			font-size 1.14em
	&__contacts
		.form__feedback--input
			border-color transparent
			&:hover,
			&:focus
				border-color $accent-color

.form__subscr--input::-webkit-input-placeholder
	color #717171
	font-size 1.14em
	font-family $Reg
.form__subscr--input::-moz-placeholder
	color #717171
	font-size 1.14em
	font-family $Reg
.form__subscr--input:-moz-placeholder
	color #717171
	font-size 1.14em
	font-family $Reg
.form__subscr--input:-ms-input-placeholder
	color #717171
	font-size 1.14em
	font-family $Reg

textarea::-webkit-input-placeholder

	font-family $Reg
	color #717171
textarea::-moz-placeholder

	font-family $Reg
	color #717171
textarea:-moz-placeholder

	font-family $Reg
	color #717171
textarea:-ms-input-placeholder

	font-family $Reg
	color #717171


// Product
.select
	display inline-block
	border none
	border-bottom 1px solid #dad5d5
	color $dark-color
	font 1em $Reg
	transition all .23s ease-in-out
	&:focus,
	&:hover
		outline none
		border-color $accent-color
		

.quantity__input
	position relative
	max-width 90px
	display inline-block
	vertical-align middle
	overflow hidden
	input
		width 100%
		height 30px
		text-align center
		padding 0 30px 0 30px
		font 1.285em $Reg
		color #2f2f2f
		line-height 25px
		outline none
		transition all .23s ease-in-out
		display inline-block
		
		&::-webkit-outer-spin-button
		&::-webkit-inner-spin-button 
			appearance none
			margin 0
		&:focus
			border-color $accent-color
		&:hover
			border-color $accent-color
	.btn__quantity
		color #2f2f2f
		width 29px
		height 29px
		background-color $light-bg
		border 1px solid #e8e8e8
		color $dark-color
		display block
		position absolute
		top 0
		transition all .23s ease-in-out
		font 1.5em $Reg
		&:hover
			background $accent-color
			color $light-color
		&.plus
			right 0
		&.minus
			left 0	
			


// Popup
.input__block
	margin 40px 0