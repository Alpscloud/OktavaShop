@import '../_helpers/_vars.styl'

.form
	&__search
		&--wrapp
			position relative
		&--input
			display inline-block
			width 100%
			padding 5px 20px
			height 40px
			text-align left
			background #f2f2f2
			border 1px solid $light-sect-bg	
			&:hover,
			&:focus
				border-color $accent-color
				
		&--btn
			display inline-block
			width 22px
			height 22px
			position absolute
			z-index 2
			top 50%
			transform translateY(-50%)
			right 10px
			background url('../img/icons/svg/search-ic.svg') center no-repeat
			background-size cover
	&__subscr
		&--input
			color #717171
			font-size 1.14em
			padding-left 30px
			padding-right 185px
		&--wrapp
			margin-top 18px
		&--btn
			color #717171
			font 1.14em $Bold
			position absolute
			top 50%
			transform translateY(-50%)
			right 0
			padding 4px 15px
			border-left 2px solid #818181
			text-align center
			text-transform uppercase
			
			&:hover
				color $accent-color
				border-color $accent-color
			



.form__subscr--input::-webkit-input-placeholder
	color #717171
	font-size 1.14em
.form__subscr--input::-moz-placeholder
	color #717171
	font-size 1.14em
.form__subscr--input:-moz-placeholder
	color #717171
	font-size 1.14em
.form__subscr--input:-ms-input-placeholder
	color #717171
	font-size 1.14em
	
