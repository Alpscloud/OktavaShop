@import '../_helpers/_vars.styl'

// ========== ========== V A R I A B L E S ========== ==========
$mwidth = 300px
// ========== ========== ========== ========== ==========

.btn
	display inline-block
	font 1.28em $Bold
	text-transform uppercase
	color $light-color
	border 2px solid transparent
	transition all .23s ease-in-out
	&__buy
		color $accent-color
		border-color $accent-color
		padding 8px 20px
		&:hover
			background-color $accent-color
			color $light-color
	&__more
		background-color $accent-color
		padding 8px 15px
		border 2px solid $accent-color
		&:hover
			color $accent-color
			background-color transparent

.hamburger
	display none
	width 30px
	height 30px
	cursor pointer
	position relative
	z-index 3
	span
		display block
		width 100%
		height 4px
		background $light-color
		margin-bottom 3px
		&:last-child
			margin-bottom 0