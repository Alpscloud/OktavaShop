@import '../_helpers/_vars.styl'

// ========== ========== V A R I A B L E S ========== ==========
$mwidth = 300px
// ========== ========== ========== ========== ==========

.btn
	display inline-block
	font 1.28em $Bold
	text-transform uppercase
	color $light-color
	border 2px solid transparent
	transition all .23s ease-in-out
	&__buy
		color $accent-color
		border-color $accent-color
		padding 8px 20px
		&:hover
			background-color $accent-color
			color $light-color
	&__more
		background-color $accent-color
		padding 8px 22px
		border 2px solid $accent-color
		&:hover
			color $accent-color
			background-color transparent
	&__up
		display none
		border-radius 50%
		width 40px
		height 40px
		position fixed
		right 30px
		bottom 30px
		background $accent-color
		z-index 10
		text-align center
		transition all .23s ease-in-out
		box-shadow 0px 0px 13px 0px rgba($dark-color, 0.21)
		&:after
			content ''
			display inline-block
			position absolute
			top 15px
			left 10px
			width 20px
			height 20px
			transform rotate(-45deg)
			border-top 1px solid $dark-color
			border-right 1px solid $dark-color
			transition all .23s ease-in-out
		&:hover
			background  $primary-color
			transform scale(1.1)
			box-shadow 0px 0px 13px 0px rgba($accent-color, 0.21)
			&:after
				border-top 1px solid $light-color
				border-right 1px solid $light-color

.hamburger
	display none
	width 30px
	height 30px
	cursor pointer
	position relative
	z-index 3
	span
		display block
		width 100%
		height 4px
		background $light-color
		margin-bottom 3px
		&:last-child
			margin-bottom 0
			
.mobile__arrow
	display flex
	justify-content space-between
	align-items center
	padding 10px 20px 10px 0
	.info
		
		font-size .8em 

.arrow
	width 20px
	height 20px
	border 2px solid $accent-color
	display inline-block
	border-left none
	border-bottom none
	transform rotate(-135deg)
	animation arrows 1.5s infinite			

@keyframes arrows 
	to 
		transform translateX(-100%) rotate(-135deg)
		opacity 0