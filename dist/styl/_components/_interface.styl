@import '../_helpers/_vars.styl'

// ========== ========== V A R I A B L E S ========== ==========
$mwidth = 300px
// ========== ========== ========== ========== ==========

.btn
	display inline-block
	font 1.28em $Bold
	text-transform uppercase
	color $light-color
	border 3px solid transparent
	transition all .23s ease-in-out
	&__buy
		color $accent-color
		border-color $accent-color
		padding 8px 20px
		&:hover
			background-color $accent-color
			color $light-color
		&--rimpler
			color $rimpler-bg
			border-color $rimpler-bg
			&:hover
				background-color $rimpler-bg
		&--inverness
			color $inverness-bg
			border-color $inverness-bg
			&:hover
				background-color $inverness-bg
		&--isabelle
			color $isabelle-bg
			border-color $isabelle-bg
			&:hover
				background-color $isabelle-bg
	&__more
		background-color $accent-color
		padding 8px 22px
		border 3px solid $accent-color
		&:hover
			color $accent-color
			background-color transparent
	&__row
		display flex
		justify-content space-between
		align-items center
		flex-wrap wrap	
	&__forget
		color #454545
		border-bottom 1px dotted #454545
		font 1em $Reg
		&:hover
			color $accent-color
			border-color $accent-color
	&__up
		display none
		border-radius 50%
		width 40px
		height 40px
		position fixed
		right 30px
		bottom 30px
		background $accent-color
		z-index 10
		text-align center
		transition all .23s ease-in-out
		box-shadow 0px 0px 13px 0px rgba($dark-color, 0.21)
		&:after
			content ''
			display inline-block
			position absolute
			top 15px
			left 10px
			width 20px
			height 20px
			transform rotate(-45deg)
			border-top 1px solid $dark-color
			border-right 1px solid $dark-color
			transition all .23s ease-in-out
		&:hover
			background  $primary-color
			transform scale(1.1)
			box-shadow 0px 0px 13px 0px rgba($accent-color, 0.21)
			&:after
				border-top 1px solid $light-color
				border-right 1px solid $light-color

.hamburger
	display none
	width 30px
	height 30px
	cursor pointer
	position relative
	z-index 3
	span
		display block
		width 100%
		height 4px
		background $light-color
		margin-bottom 3px
		&:last-child
			margin-bottom 0
			
.mobile__arrow
	display flex
	justify-content space-between
	align-items center
	padding 10px 20px 10px 0
	.info
		
		font-size .8em 

.arrow
	width 20px
	height 20px
	border 2px solid $accent-color
	display inline-block
	border-left none
	border-bottom none
	transform rotate(-135deg)
	animation arrows 1.5s infinite			

@keyframes arrows 
	to 
		transform translateX(-100%) rotate(-135deg)
		opacity 0
		

.overlay
	width 100%
	height 100%
	position fixed
	background rgba($dark-color, .50)
	z-index 15
	top 0
	left 0
	display none
	transition all .3s ease-in-out
	// visibility hidden
	// opacity 0
	// &.active
	// 	z-index 15
	// 	opacity 1
	// 	visibility visible
		

.popup
	position fixed
	top 50%
	left 50%
	transform translate(-50%, -50%)
	width 100%
	max-width 630px
	background-color $light-color
	z-index 20
	padding 80px 30px 30px 30px
	text-align center
	display none
	&__title
		text-transform uppercase
		padding-bottom 5px
		border-bottom 1px solid $light-sect-bg
		font 1.285em $Bold
		color #717171

	

.close
	display inline-block
	position absolute
	top 20px
	right 20px
	width 20px
	height 20px
	background url('../img/icons/svg/close-ic.svg') center no-repeat
	z-index 25
	cursor pointer