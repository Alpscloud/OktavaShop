// File with all variables styles
@import '_vars.styl'

// ========== ========== G L O B A L   S T Y L E S ========== ==========
*
	padding 0
	margin 0
	box-sizing border-box
	
html
	text-size-adjust none
	
body
	font 14px $Reg
	line-height 1.6
	overflow-x hidden
	min-width 320px
	height 100%
	opacity 1
	position relative
	color $dark-color
	background $body-bg

h1,h2,h3,h4,h5,h6,ul,li
	margin 0
	padding 0

input,
textarea
	outline none
	background transparent
	border none
	transition all .23s ease-in-out

a
	text-decoration none
	outline none
	transition all .23s ease-in-out
	&:hover
		text-decoration none
		
button
	box-shadow none
	border none
	outline none
	cursor pointer
	transition all .23s ease-in-out
	background transparent

img
	width 100%
	height auto
// ========== ========== ========== ========== ========== ==========

// ========== ========== M A I N   S T Y L E S ========== ==========
	
.clearfix:before,
.clearfix:after,
.container:before,
.container:after,
.container-fluid:before,
.container-fluid:after,
.row:before,
.row:after
	content " "
	display table

.clearfix:after,
.container:after,
.container-fluid:after,
.row:after
	clear both

.left
	float left

.right
	float right

.text-center
	text-align center
.text-left
	text-align left
.text-right
	text-align right


.container
	position relative
	z-index 2
	
.box 
	padding 35px 0
	
.w3c
	visibility hidden
	display none
	
.sect__overlay
	position relative
	&:after
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background rgba($dark-color, .5)

.sect__title
	font 2em $Bold
	color $dark-color
	text-transform uppercase
	margin-bottom 50px
	text-align center
	&--light
		color $light-color
	&--text
		margin-bottom 25px

.sect__descr
	font 1.2em $Med
	margin-bottom 25px
	text-align center
	
.counter
	display inline-block
	background-color #717171
	color $light-color
	text-align center
	border-radius 50%
	width 28px
	height 28px
	line-height 28px
	font 18px $Bold
		
// ========== ========== ========== ========== ========== ==========