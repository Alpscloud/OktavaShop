// Media queris mixins add there
@import '../../node_modules/stylus-media-queries/index.styl'
/* -------Screen sizes----------- 
+screen(minWidth, maxWidth)
+max-screen(maxWidth)
+min-screen(minWidth)
+screen-height(minHeight, maxHeight)
+max-screen-height(maxHeight)
+min-screen-height(minHeight)
*/

+max-screen(1200px)
	// Main page
	.nav__list--item
		margin-right 20px
	
	.adv__item--title
		font-size 1em
	
	.brand__categories
		&--link
			margin-bottom 25px
		&--thumb
			margin 0 auto


+max-screen(1000px)
	// Main page
	.menu__list
		text-align left
		&--item
			padding 2px 5px
	.header__action 
		margin 20px 0
	
	.nav__list
		&--dropdown 
			a
				font-size 1em
		&--item
			margin-right 5px
			padding 15px 0
		&--link
			font-size 1em
	.adv__row
		justify-content center
	.adv__item
		margin-bottom 25px
		&--img
			width 150px
			height 150px
	.footer
		.social__list
			&--item
				margin-right 10px
		&__list
			margin-bottom 25px
	
	
	
	// Compare
	.compare
		&__table
			&--td
				&--product
					padding 10px
					
	.product__item
		&--visual
			display block
			img
				display block
				margin 0 auto 7px auto
			h3
				text-align center
				padding-left 0
			
	.product__action
		display block
		.price
			display block
			text-align center
			margin-bottom 5px
		&--link
			display inline-block
			
+max-screen(991px)
	.address
		padding-top 25px
		border-top 1px solid #717171
			
+max-screen(767px)
	body
		font-size 12px
	
	.box
		padding 30px 0
		
	// Main page
	.social__list
		text-align center
		margin-bottom 10px
	.menu__list
		text-align center
	.header
		&__info
			padding 15px 0
	.logo
		&__img
			margin 0 auto
		&__descr
			text-align center
	.phones
		margin-top 20px
		
	.nav
		position relative
		padding 10px 0
		text-align right
		&__list
			position absolute
			top 100%
			left 0
			width 100%
			text-align center
			z-index 10
			background-color $accent-color
			display none
			
			&--dropdown
				display none !important
			&--item
				display block
				border-bottom 1px solid $light-color
				&:last-child
					border-bottom 0
		&__rimpler
			.nav__list
				background-color $rimpler-bg
		&__inverness
			.nav__list
				background-color $inverness-bg
		&__isabelle
			.nav__list
				background-color $isabelle-bg
	.hamburger
		display inline-block
	.sect__banner 
		.swiper-container 
			.swiper-slide
				background-position center center
				.slide__row
					max-width 100%	
	.choice__cat--item
		margin-bottom 25px
	.sect__seo
		p
			margin-bottom 25px
	.sect__news 
		.btn
			margin-top  0
	.article__item
		padding-bottom 25px
		margin-bottom 25px
		border-bottom 1px solid $accent-color
	.sect__subscribe
		text-align center
	.footer
		text-align center
		&__list
			text-align center
			padding-bottom 25px
			border-bottom 1px solid #717171
		
		.social__list
			text-align center
			
	.address
		padding-top 0
		border-top none
	
	// Blog page
	.blog__posts
		.article__item
			&--title
				margin-top 25px
	
	// Aside
	.aside
		&__block
			margin-bottom 25px
			&:last-child
				margin-bottom 25px
		&__title
			&:after
				display block
		&__list
			display none 
			
	// Blog post
	.blog__posts
		.article__item--single
			.article__item--thumb
				margin-bottom 25px
	.share
		&__text
			text-align center
		&__list
			text-align center
			margin-bottom 10px
	.back
		text-align center
	.comments__item--info
		margin-bottom 25px
		
	// Contactss
	.tabs__wrapp
		display none
	.title__offset
		margin-top 30px
		

	// Brands
	.brand__logo
		img
			display block
			max-width 250px
			margin 0 auto 20px auto
		
+max-screen(620px)
	.row__hidden
		display block
		
+max-screen(475px)
	// Main page
	.menu__list
		&--item
			padding 2px 10px
		&--link
			font-size 1em
	.slider__title
		margin-bottom 25px
	.slider__item
		max-width 100%
	.slider__navigation
		position relative
		top auto
		right auto
		margin-bottom 25px
		.owl-prev
			margin-right 30px
	.form__subscr
		&--btn
			position relative
			top auto
			right auto
			border 2px solid #818181
			margin-top 25px
			transform none
			padding-top 10px
			padding-bottom 10px
		&--input
			padding-right 30px
			
	// Brands
	.brand__categories--thumb
		width 120px
		height 120px
			
+max-screen(420px)
	// Main page
	.header__action
		&--link
			span:not([class='counter'])
				display none
		
		
