.basket
	&__row
		padding-bottom 20px
		border-bottom 1px solid $light-sect-bg
		margin-bottom 40px
		&:last-child
			border-bottom none
			margin-bottom 0
	&__info
		.product__title
			font-size 1.14em
		
		.slider__action
			margin-top 0
	
	&__price
		color #2f2f2f
		font-size 1.285em 
		font-family $Bold
		&--single
			font-family $Reg
		span
			display inline-block
			margin-left 45px
			
	&__total
		padding 20px
		background-color $light-bg
		.basket
			&__price
				margin-bottom 30px
				span
					margin-left 12px
		.btn
			padding-right 0
			padding-left 0
			width 100%
			
.product__units
	margin 15px 0 50px 0
	color #707070
	span
		display inline-block
		margin-left 5px
	p
		margin-bottom 15px
		&:last-child
			margin-bottom 0
		