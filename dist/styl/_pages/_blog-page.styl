@import '../_helpers/_vars.styl'

.blog__posts
	.article__item
		padding-bottom 20px
		margin-bottom 20px
		border-bottom 1px solid $light-sect-bg
		&--title
			margin-top 0

.article__item
	&--title
		text-transform uppercase
		font 1.28em $Bold
		margin 20px 0
		a
			color $dark-color
			&:hover
				text-decoration underline
		&--top
			margin 0 0 20px 0
	
	p
		margin-bottom 10px
	&--body
		&--bottom
			margin-bottom 20px
	
	&--info
		margin-bottom 25px
		span
			display inline-block
			vertical-align middle
			margin-right 15px
			position relative
			padding-left 25px
			color $dark-color
			&:before
				content ''
				position absolute
				top 50%
				transform translateY(-50%)
				left 0
				width 18px
				height 18px
				display inline-block
			&:last-child
				margin-right 0

.article__more
	text-transform uppercase
	color $accent-color
	font 1em $Bold
	border-bottom 1px solid #edf4d7
	&:hover
		border-color $accent-color

.time
	&:before
		background url('../img/icons/svg/time-ic.svg') center no-repeat
.comment
	&:before
		background url('../img/icons/svg/comment-ic.svg') center no-repeat