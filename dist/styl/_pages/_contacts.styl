@import '../_helpers/_vars.styl'

.tabs__title
	color #2f2f2f
	padding 8px 25px
	position relative
	background-color $light-bg
	font 1.285em $Bold
	cursor pointer
	.arrow
		display inline-block
		position absolute
		top 50%
		right 25px
		margin-top -4px
		transform translateY(-50%) rotate(135deg)
		width 12px
		height 12px
		border-top 1px solid $dark-color
		border-right 1px solid $dark-color
		pointer-events none

.tabs__list
	&--item
		float left
		width 50%
		padding 15px
		cursor pointer
		text-align left
		color #a7a7a7
		transition all .23s ease-in-out
		&:hover
			color $dark-color
		&.active
			color $dark-color
		span
			display block
			margin-bottom 6px
			&:last-child
				margin-bottom 0
		
.tabs__content
	margin-top 25px
	margin-bottom 40px
