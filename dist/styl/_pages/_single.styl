.single__product
	padding-bottom 25px
	border-bottom 1px solid $light-sect-bg

.product
	&__header
		padding-bottom 20px
		border-bottom 1px solid $light-sect-bg
		text-align left
		margin-bottom 20px
		
	&__cat
		text-transform uppercase
		color #a7a7a7
		margin-bottom 20px
		font-size 1.285em
		a
			color inherit
			&:hover
				text-decoration underline
	
	&__title
		text-transform uppercase
		color #212121
		font 1.857em $Bold
		width 70%
	
	&__price
		color $accent-color
		font 2.14em $Bold
		width 30%
		text-align right
		
	&__row
		margin-bottom 20px
		&:last-child
			margin-bottom 0
		&--share
			display flex
			align-items center
			justify-content space-between
			flex-wrap wrap
		label
			color $footer-bg
			
			
	&__status
		color #717171
		font-size 1.12em
		

	&__info
		color $dark-color
		&--item
			color $dark-color
			margin-bottom 20px
			&:last-child
				margin-bottom 0
			.strong
				font 1em $Bold
				display inline-block
				margin-right 5px
		
		&--row
			display flex
			justify-content space-between
			align-items center
			flex-wrap wrap
			margin 35px 0
		&--link
			color #454545
			
			position relative
			padding-left 30px
			display inline-block
			svg
				position absolute
				top 50%
				transform translateY(-50%)
				left 0
				display inline-block
				fill #454545
				width 22px
				height 22px
				transition all .23s ease-in-out
			span
				border-bottom 1px dotted

				display inline-block
			&:hover
				color $primary-color
				svg
					fill $primary-color
				span
					border-color transparent
			
				
			
			
.feedback__list
	color #717171
	
	&--item
		display inline-block
		margin-right 25px
		position relative
		&:after
			content ''
			display inline-block
			width 10px
			height 10px
			position absolute
			top 50%
			transform translateY(-50%)
			right -20px
			background url('../img/icons/svg/arrow-slider-ic.svg') center no-repeat
		&:last-child
			margin-right 0
			&:after
				display none
	&--link
		color inherit
		&:hover
			text-decoration underline
		
.product__tabs
	&--wrapp
		margin 60px 0
	&--item
		display block
		padding 13px 25px
		color #717171
		transition all .23s ease-in-out
		cursor pointer
		&:hover
			background-color $light-bg
			color #2f2f2f
		&.active
			background-color $light-bg
			color #2f2f2f
	